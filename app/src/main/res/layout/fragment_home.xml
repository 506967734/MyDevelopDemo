<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableLoadMore="false"
    app:srlEnableRefresh="true">

    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical">

        <cn.lightsky.infiniteindicator.InfiniteIndicator
            android:id="@+id/infinite_anim_circle"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            app:indicator_type="indicator_default" />

        <ImageView
            android:id="@+id/ivAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />
        <!--菜单模块-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e5e5e5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>

                <LinearLayout style="@style/navLily">

                    <ImageView
                        style="@style/navIv"
                        android:src="@drawable/ic_nav" />

                    <TextView
                        style="@style/navTv"
                        android:text="超市" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--滚动字幕模块-->
    </LinearLayout>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>


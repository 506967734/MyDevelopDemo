<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_root"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/main_navigation_bottom_height">

    <View
        android:id="@+id/navigation_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_navigation_bottom_height"
        android:layout_alignBottom="@+id/bottomBar"
        android:background="@mipmap/main_navigation_bg" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_navigation_bottom_height"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_menu_home" />

        <ImageView
            android:id="@+id/ivCategory"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_menu_category" />

        <ImageView
            android:id="@+id/ivPersonal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_menu_person" />

        <ImageView
            android:id="@+id/ivCar"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/selector_menu_car" />

    </LinearLayout>
</RelativeLayout>